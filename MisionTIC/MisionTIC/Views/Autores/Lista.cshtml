@model List<MisionTIC.Models.viewModels.Autors>
@{
    ViewBag.Title = "Lista Autores";
}

<h2>@ViewBag.Tittle</h2>
<div class="container-fluid" style="margin-top: 3%;">
    <!--Agregar-->
    <h1><i class="bi bi-person-circle"></i> Autores</h1>
    <hr>
    <div class="row">
        <!-- Button trigger modal -->
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            @Html.ActionLink("Agregar Autor", "Nuevo", "Autores", new { @class = "btn  btn - outline - secondary" })
            
        </div>
    </div>
    <!--Tabla-->
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Nacionalidad</th>
                    <th>Fecha de Nacimiento</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Elemento in Model)
                {
                    <tr>
                        <td>@Elemento.Id</td>
                        <td>@Elemento.Nombre</td>
                        <td>@Elemento.Nacionalidad</td>
                        <td>@Elemento.FechaNacimiento</td>
                        <td>
                            <a class="btn btn-outline-warning" href="Editar/@Elemento.Id"><i class="bi bi-pencil"></i> Editar</a>
                            <a class="btn btn-outline-danger"  href="Eliminar/@Elemento.Id"><i class="bi bi-trash"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>