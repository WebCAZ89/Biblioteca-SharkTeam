@model MisionTIC.Models.Libro
@{
    ViewBag.Title = "Nuevo Libro";
}
<div class="container-fluid" style="margin-top: 3%;">
    <div class="page-header">
        <h1 class="text-titles"><i class="zmdi zmdi-account-box"></i> AGREGAR <small>LIBRO</small></h1>
    </div>
    <p class="lead">Agregar un nuevo libro.</p>

    @using (Html.BeginForm("Nuevo", "Libros", FormMethod.Post))
    {
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="form-group label-floating">
                    @Html.LabelFor(d => d.NombreLibro, new { @class = "control-label" })
                    @Html.TextBoxFor(d => d.NombreLibro, "", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div class="form-group label-floating">
                    @Html.LabelFor(d => d.TipoLibro, new { @class = "control-label" })
                    @Html.TextBoxFor(d => d.TipoLibro, "", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div class="form-group label-floating">
                    @Html.LabelFor(d=> d.EditorialLibro, new { @class = "control-label" })
                    @Html.TextBoxFor(d => d.EditorialLibro, "", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div class="form-group label-floating">
                    @Html.LabelFor(d => d.AnoLibro, new { @class = "control-label" })
                    @Html.TextBoxFor(d => d.AnoLibro, "", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div class="form-group label-floating">
                    @Html.LabelFor(d => d.IdAutor, "Autor", new { @class = "control-label" })
                    @{ 
                        MisionTIC.Models.BibliotecaTicEntities db = new MisionTIC.Models.BibliotecaTicEntities();
                        List<MisionTIC.Models.Autor> ListAutores = db.Autor.ToList();
                        <select name="IdAutor" class="form-control">
                            @{ 
                                foreach (MisionTIC.Models.Autor s in ListAutores) 
                                {
                                    <option value="@s.IdAutor">@s.NombreAutor</option>
                                }
                            }
                        </select>
                    }
                </div>
            </div>
        </div>
        <p class="text-center" style="margin-top: 20px;">
            <button type="submit" class="btn btn-info btn-raised btn-sm" onclick="imprimir();">Guardar</button>
        </p>
    }

    <script>
        function imprimir
    </script>