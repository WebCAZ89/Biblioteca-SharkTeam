@model IEnumerable<MisionTIC.Models.Libro>
@{
    ViewBag.Title = "Lista Libros";
}

<h2>@ViewBag.Tittle</h2>
<div class="container-fluid" style="margin-top: 3%;">
    <!--Agregar-->
    <h1><i class="bi bi-person-circle"></i> Libros</h1>
    <hr>
    <div class="row">
        <!-- Button trigger modal -->
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            @Html.ActionLink("Agregar Libro", "Nuevo", "Autores", new { @class = "btn  btn - outline - secondary" })

        </div>
    </div>
    <!--Tabla-->
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Editorial</th>
                    <th>Año</th>
                    <th>Autor</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Elemento in Model)
                {
                <tr>
                    <td>@Elemento.IdLibro</td>
                    <td>@Elemento.NombreLibro</td>
                    <td>@Elemento.TipoLibro</td>
                    <td>@Elemento.EditorialLibro</td>
                    <td>@Elemento.AnoLibro</td>
                    <td>@Elemento.IdAutor</td>
                    <td>
                    <a class="btn btn-outline-warning" href="Editar/@Elemento.IdLibro"><i class="bi bi-pencil"></i> Editar</a>
                    <a class="btn btn-outline-danger" href="Eliminar/@Elemento.IdLibro"><i class="bi bi-trash"></i> Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>